{
  "manifest_version": 3,
  "name": "AI Eco Monitor",
  "version": "1.2",
  "description": "AIチャットの使用量と環境コスト（電気・水）を計測します。",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Eco Monitor"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}